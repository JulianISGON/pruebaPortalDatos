<configuration>
    <!-- Appender principal - muestra logs con formato limpio -->
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- Logs de TUS clases - NIVEL INFO para ver auditorÃ­a -->
    <logger name="enlace.screenplay" level="INFO" additivity="false">
        <appender-ref ref="STDOUT"/>
    </logger>

    <!-- Frameworks - silenciados o solo errores -->
    <logger name="net.serenitybdd" level="WARN"/>
    <logger name="net.thucydides" level="ERROR"/>
    <logger name="org.openqa.selenium" level="ERROR"/>
    <logger name="io.cucumber" level="WARN"/>
    <logger name="org.gradle" level="WARN"/>

    <!-- Suprimir completamente el error de requirements -->
    <logger name="net.thucydides.model.requirements" level="OFF"/>
    <logger name="net.thucydides.core.reports" level="ERROR"/>

    <!-- Root logger - solo warnings y errores para el resto -->
    <root level="WARN">
        <appender-ref ref="STDOUT"/>
    </root>
</configuration>
